<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mahjongscoresheet.NameActivity">

    <TextView
        android:text="依序入四家的名字："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv1"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="東："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_east"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_name1"
        android:layout_alignBottom="@+id/et_name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name1"
        android:layout_below="@+id/tv1"
        android:layout_toRightOf="@+id/tv_east"
        android:layout_toEndOf="@+id/tv_east"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name3"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et_name2"
        android:layout_alignLeft="@+id/et_name2"
        android:layout_alignStart="@+id/et_name2" />

    <TextView
        android:text="南："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_south"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_name2"
        android:layout_alignBottom="@+id/et_name2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="西："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_west"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_name3"
        android:layout_alignBottom="@+id/et_name3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp" />

    <TextView
        android:text="北："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_north"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_name4"
        android:layout_alignBottom="@+id/et_name4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RadioButton
            android:text="東風戰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb1"
            android:layout_weight="1"
            android:textSize="20sp" />

        <RadioButton
            android:text="半莊戰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb2"
            android:layout_weight="1"
            android:textSize="20sp"
            android:checked="true" />

        <RadioButton
            android:text="全莊戰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb3"
            android:layout_weight="1"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:text="選擇對戰局數："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et_name4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name4"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/et_name3"
        android:layout_toRightOf="@+id/tv_north"
        android:layout_toEndOf="@+id/tv_north" />

    <TextView
        android:text="輸入起點："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/rg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/et_startPoint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv3"
        android:layout_alignBottom="@+id/tv3"
        android:layout_toRightOf="@+id/tv3"
        android:ems="10"
        android:inputType="number"
        android:maxLength="7"
        android:text="25000"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:text="輸入返點："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/et_endPoint"
        android:layout_alignBottom="@+id/et_endPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_endPoint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_startPoint"
        android:layout_alignStart="@+id/et_startPoint"
        android:layout_below="@+id/et_startPoint"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="7"
        android:text="30000"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name2"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@+id/et_name1"
        android:layout_toRightOf="@+id/tv_south"
        android:layout_toEndOf="@+id/tv_south" />

    <Button
        android:text="確定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_OK"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        style="@android:style/Widget.Button"
        android:onClick="b_OK"
        android:layout_below="@+id/et_endPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
