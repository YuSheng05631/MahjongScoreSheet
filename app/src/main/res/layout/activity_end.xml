<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mahjongscoresheet.EndActivity">

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sp_uma"
        android:layout_marginTop="15dp"
        android:onClick="clickReset"
        android:text="再來一局"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:text="成績結算："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv1"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Player1："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name1"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="25000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_point1"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/tv_name1"
        android:layout_alignBottom="@+id/tv_name1"
        android:layout_toRightOf="@+id/tv_name1"
        android:layout_toEndOf="@+id/tv_name1" />

    <TextView
        android:text="25000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_point2"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_rPoint1"
        android:layout_toRightOf="@+id/tv_name2"
        android:layout_toEndOf="@+id/tv_name2" />

    <TextView
        android:text="25000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_point3"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/tv_name3"
        android:layout_alignBottom="@+id/tv_name3"
        android:layout_toRightOf="@+id/tv_name2"
        android:layout_toEndOf="@+id/tv_name2" />

    <TextView
        android:text="25000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_point4"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/tv_name4"
        android:layout_alignBottom="@+id/tv_name4"
        android:layout_toRightOf="@+id/tv_name4"
        android:layout_toEndOf="@+id/tv_name4" />

    <TextView
        android:text="+0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rPoint1"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_point1"
        android:layout_alignRight="@+id/tv_point1"
        android:layout_alignEnd="@+id/tv_point1" />

    <TextView
        android:text="Player2："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name2"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_rPoint1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Player3："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name3"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_rPoint2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="+0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rPoint3"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_point3"
        android:layout_alignRight="@+id/tv_point3"
        android:layout_alignEnd="@+id/tv_point3" />

    <TextView
        android:text="Player4："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name4"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_rPoint3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="+0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rPoint4"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_point4"
        android:layout_alignRight="@+id/tv_point4"
        android:layout_alignEnd="@+id/tv_point4" />

    <TextView
        android:text="+0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rPoint2"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_point2"
        android:layout_alignRight="@+id/tv_point2"
        android:layout_alignEnd="@+id/tv_point2" />

    <TextView
        android:text="選擇順位馬："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_rPoint4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_uma"
        android:entries="@array/UmaEntries"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:layout_toEndOf="@+id/tv2" />
</RelativeLayout>
